<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="edu.upc.eseiaat.pma.kmamilles.MainActivity">

    <Button
        android:id="@+id/btn_a_millas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a millas"
        android:layout_alignBaseline="@+id/btn_a_km"
        android:layout_alignBottom="@+id/btn_a_km"
        android:layout_alignStart="@+id/edit_km"/>

    <Button
        android:id="@+id/btn_a_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A kilometros"
        android:layout_below="@+id/edit_km"
        android:layout_toEndOf="@+id/label_millas"/>

    <TextView
        android:id="@+id/label_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edit_millas"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="18dp"
        android:text="Kilometros"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/label_millas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Millas"
        android:textSize="18sp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/btn_a_millas"
        android:layout_toEndOf="@+id/btn_a_millas"/>

    <EditText
        android:id="@+id/edit_millas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/label_millas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"/>

    <EditText
        android:id="@+id/edit_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/label_km"
        android:layout_alignParentStart="true"
        android:layout_marginStart="68dp"/>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_millas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Salir"/>


</RelativeLayout>